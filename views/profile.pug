html
  include header.pug
  body
    // navbar
    include navbar-in.pug

    // main content
    .container-fluid
      .row.fade-in
        // display lists
        .col-lg-9.left-panel
          h1.welcome-message Welcome, #{username}!
          .lists
          if questionLists.length > 0   
          each val, i in questionLists  
            -var queryStr = "/interview/" + questionLists[i].title
            
            .list-item.row
              .col-sm-8    
                a(href=queryStr)
                  h3.question-list-title #{questionLists[i].title}
                p.question-number #{questionLists[i].questions.length} questions
              .col-sm-4.item-links
                p.text-right
                  a(href='#') Edit
                p.text-right
                  a(href='#') Delete
          // end of lists section
        // end of column
        // sidebar links
        .col-lg-3.side-links
          .row
            .col-sm-12.side-link-block
              h4 Create
              p Create a new list of interview questions by clicking the button below
              a.btn.btn-outline-light(href="/createlist") Create List
            .col-sm-12.side-link-block
              h4 Search
              p Search through hundreds of interview question lists and land your dream job.
              a.btn.btn-outline-light(href="/search") Search Lists
            .col-sm-12.side-link-block
              h4 Blog
              p Read artiles from some of the leading experts in hiring and land your dream job.
              a.btn.btn-outline-light(href="#") Read Blog
    // footer
    footer
      .container
        p All rights reserved 2017Â©
    // end of footer
  include footer.pug
  script(src='js/profile.js')